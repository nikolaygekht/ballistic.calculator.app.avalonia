<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:BallisticCalculator.Controls.Controls"
        x:Class="ReticleEditor.Views.Dialogs.EditRectangleDialog"
        Title="Edit Rectangle"
        Width="450" Height="450"
        MinWidth="400" MinHeight="380"
        FontSize="{DynamicResource AppFontSize}"
        WindowStartupLocation="CenterOwner"
        CanResize="true">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20" Spacing="10">
            <TextBlock Text="Top-Left Corner" FontWeight="SemiBold" FontSize="{DynamicResource AppFontSize}"/>

            <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="X:" VerticalAlignment="Center" FontSize="{DynamicResource AppFontSize}"/>
                <controls:MeasurementControl Grid.Row="0" Grid.Column="1" x:Name="TopLeftX" x:FieldModifier="internal" FontSize="{DynamicResource AppFontSize}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Y:" VerticalAlignment="Center" FontSize="{DynamicResource AppFontSize}" Margin="0,8,0,0"/>
                <controls:MeasurementControl Grid.Row="1" Grid.Column="1" x:Name="TopLeftY" x:FieldModifier="internal" FontSize="{DynamicResource AppFontSize}" Margin="0,8,0,0"/>
            </Grid>

            <TextBlock Text="Size" FontWeight="SemiBold" FontSize="{DynamicResource AppFontSize}" Margin="0,10,0,0"/>

            <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" VerticalAlignment="Center" FontSize="{DynamicResource AppFontSize}"/>
                <controls:MeasurementControl Grid.Row="0" Grid.Column="1" x:Name="WidthControl" x:FieldModifier="internal" FontSize="{DynamicResource AppFontSize}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Height:" VerticalAlignment="Center" FontSize="{DynamicResource AppFontSize}" Margin="0,8,0,0"/>
                <controls:MeasurementControl Grid.Row="1" Grid.Column="1" x:Name="HeightControl" x:FieldModifier="internal" FontSize="{DynamicResource AppFontSize}" Margin="0,8,0,0"/>
            </Grid>

            <Grid ColumnDefinitions="100,*" Margin="0,10,0,0">
                <TextBlock Grid.Column="0" Text="Line Width:" VerticalAlignment="Center" FontSize="{DynamicResource AppFontSize}"/>
                <controls:MeasurementControl Grid.Column="1" x:Name="LineWidthControl" x:FieldModifier="internal" FontSize="{DynamicResource AppFontSize}"/>
            </Grid>

            <Grid ColumnDefinitions="100,*">
                <TextBlock Grid.Column="0" Text="Color:" VerticalAlignment="Center" FontSize="{DynamicResource AppFontSize}"/>
                <ComboBox Grid.Column="1" x:Name="ColorCombo" x:FieldModifier="internal" FontSize="{DynamicResource AppFontSize}"/>
            </Grid>

            <Grid ColumnDefinitions="100,*">
                <CheckBox Grid.Column="1" x:Name="FillCheckBox" x:FieldModifier="internal" Content="Fill" FontSize="{DynamicResource AppFontSize}"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10" Margin="0,20,0,0">
                <Button Content="OK" Click="OnOK" Width="80" FontSize="{DynamicResource AppFontSize}"/>
                <Button Content="Cancel" Click="OnCancel" Width="80" FontSize="{DynamicResource AppFontSize}"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
